# paths
set --export PATH $HOME/.local/bin $PATH

# program configs
set --universal FZF_DEFAULT_COMMAND 'fd'
set --export VAULT_ADDR "https://vault.connorrhodes.com"

{{ if eq .chezmoi.os "darwin" }}
# macOS only
set --export LIMA_HOME "$HOME/.config/lima"
{{ end }}

{{ if stat (joinPath .chezmoi.homeDir ".config" "fish" "secret.env") }}
# source secret.env if it exists
source $HOME/.config/fish/secret.env
{{ end }}

